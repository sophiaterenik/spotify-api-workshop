extends layout.pug
    
block content
    h1 Welcome! #{user.id}  here's your top songs within the last 6 monthsâœ¨
    img(src=user.images[0].url, class='circular_image')

    table 
      each t in tracks
        tr 
          - var artist_name = t.artists[0].name
          - var track_name = t.name
          - var track_preview = t.preview_url
          - var artist_id = t.artists[0].id
          - var track_id = t.id 

          td #{artist_name}
          td: a(href='/recommendations?artist=' + artist_id+'&track='+track_id) #{track_name}
          td: a(href=track_preview) Preview